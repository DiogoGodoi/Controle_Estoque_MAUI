@page "/Categorias"
@using Estoque.Infraestructure.Http.Interfaces

@if (categorias == null)
{
    <h5>Carregando</h5>
}
else
{
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-12">
                <GridCategorias categorias="@categorias" />
            </div>

            <div class="d-flex justify-content-end col-12 m-1 p-0">
                <button class="btn btn-primary col-12 col-md-1 my-1 mx-3">
                    Nova categoria
                </button>
            </div>

        </div>
    </div>
}

@code {

    private IEnumerable<CategoriaDTO> categorias { get; set; } = new List<CategoriaDTO>();

    protected override async Task OnInitializedAsync()
    {
        await Requisicao();
    }

    private async Task Requisicao()
    {
        categorias = await listarCategoriaDTO.ExecutarListagem();
    }
}

