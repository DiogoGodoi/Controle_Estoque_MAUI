@page "/LocaisEstoque"

@if (locaisEstoque == null)
{
    <h5>Carregando</h5>
}
else
{
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="col-12">
                <GridLocalEstoque localEstoque="@locaisEstoque" />
            </div>

            <div class="d-flex justify-content-end col-12 m-1 p-0">
                <button class="btn btn-primary col-12 col-md-1 my-1 mx-3">
                    Novo local de estoque
                </button>
            </div>

        </div>
    </div>
}

@code {

    private IEnumerable<LocalEstoqueDTO> locaisEstoque { get; set; } = new List<LocalEstoqueDTO>();

    protected override async Task OnInitializedAsync()
    {
        await Requisicao();
    }

    private async Task Requisicao()
    {
        locaisEstoque = await HttpRepositoryLocalEstoqueDTO.Listar();
    }
}

