@page "/ListarProdutos"

@if (produtos == null)
{
    <h5>Carregando</h5>
}
else
{
    <div class="table-responsive">
        <QuickGrid Items="produtos.AsQueryable()" Pagination="paginacao" class="table table-striped">
            <PropertyColumn Property="@(p => p.descricao)" Title="Descrição" />
            <PropertyColumn Property="@(p => p.categoria)" Title="Tipo" />
            <PropertyColumn Align="Align.Center" Property="@(p => p.unidade)" Title="Unidade" />
            <PropertyColumn Align="Align.Center" Property="@(p => p.quantidade)" Title="Quantidade" />
            <PropertyColumn Align="Align.Center" Property="@(p => p.estoqueMin)" Title="Min" />
            <PropertyColumn Align="Align.Center" Property="@(p => p.precoMedio)" Title="Preço" />
            <TemplateColumn Align="Align.Center" Title="Ações">
                <div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6">
                            <button type="button" class="btn btn-primary btn-sm col-12">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z"></path>
                                    <path fill-rule="evenodd" d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708z"></path>
                                </svg>
                                Entrada
                            </button>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6">
                            <button type="button" class="btn btn-danger btn-sm col-12">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z"></path>
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z"></path>
                                </svg>
                                Saida
                            </button>
                        </div>
                    </div>
                </div>
            </TemplateColumn>
        </QuickGrid>
        <Paginator State="paginacao" />
    </div>
}

@code {

    [Parameter]
    public IEnumerable<ProdutoDTO> produtos { get; set; } = new List<ProdutoDTO>();

    PaginationState paginacao = new PaginationState { ItemsPerPage = 10 };
}
